<div class='fuck_you'>
  <h1>shit list</h1>
  <p>evil things to do<p>

  <%= form_for :todo do |f| %>
    <%= f.text_field :task, placeholder: "add task here", id: "todo-box" %>
  <% end %>

  <br>

  <% @todos.each do |t| %>
    <ul>
      <li> <%= t.task %> </li>
